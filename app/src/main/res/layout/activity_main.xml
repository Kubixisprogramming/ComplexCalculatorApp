<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"

            android:text="Complex Calculator"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/design_default_color_primary"

            android:id="@+id/txtwelcome"/>

        <!--Basic calculations button-->
        <com.google.android.material.button.MaterialButton
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:layout_below="@id/txtwelcome"
            android:layout_marginTop="100dp"

            android:text="Basic calculations"
            android:textSize="25dp"

            android:id="@+id/btngotobasic"/>



        <!--Advanced calculations button-->
        <com.google.android.material.button.MaterialButton
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_below="@id/btngotobasic"


            android:text="Advanced calculations"
            android:textSize="25dp"

            android:id="@+id/btngotoadvanced"/>

</RelativeLayout>