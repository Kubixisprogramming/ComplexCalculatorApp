<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/dialoginputbox"
                >

                <!--visualizes input from buttons-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:layout_marginHorizontal="30dp"

                    android:id="@+id/dialogainput"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="25dp"
                        android:focusable="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/dialoginputbox"
                android:id="@+id/dialogdeletebuttons">


                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="X"
                    android:textSize="15dp"


                    android:id="@+id/btnadialogclose"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="35dp"
                    android:layout_alignParentRight="true"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="C"
                    android:textSize="15dp"


                    android:id="@+id/btnadialogclear"/>


            </RelativeLayout>


            <!--grid with all the buttons you can press-->


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="28dp"
                android:layout_below="@id/dialogdeletebuttons"

                android:columnCount="3"
                android:rowCount="10"
                android:padding="16dp"
                android:layout_gravity="center"

                android:id="@+id/buttongrid">


                <!--buttons for all inputs-->

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="7"
                    android:textSize="15dp"

                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna7"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="8"
                    android:textSize="15dp"

                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna8"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="9"
                    android:textSize="15dp"

                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna9"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="4"
                    android:textSize="15dp"

                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna4"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="5"
                    android:textSize="15dp"

                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna5"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="6"
                    android:textSize="15dp"

                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna6"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="1"
                    android:textSize="15dp"

                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna1"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="2"
                    android:textSize="15dp"

                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna2"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="3"
                    android:textSize="15dp"

                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna3"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="0"
                    android:textSize="15dp"

                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btna0"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="PI"
                    android:textSize="15dp"

                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnapi"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="e"
                    android:textSize="15dp"

                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnae"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="sin"
                    android:textSize="15dp"

                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnasin"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="cos"
                    android:textSize="15dp"

                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnacos"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="tan"
                    android:textSize="15dp"

                    android:layout_row="4"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnatan"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="asin"
                    android:textSize="15dp"

                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnaarcsin"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="acos"
                    android:textSize="15dp"

                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnaarccos"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="atan"
                    android:textSize="15dp"

                    android:layout_row="5"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnaarctan"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="sqrt"
                    android:textSize="15dp"

                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnaroot"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="pow"
                    android:textSize="15dp"

                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnapow"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="/"
                    android:textSize="15dp"

                    android:layout_row="6"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnadiv"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="+"
                    android:textSize="15dp"

                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnaadd"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="-"
                    android:textSize="15dp"

                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnamin"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="*"
                    android:textSize="15dp"

                    android:layout_row="7"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnamul"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="("
                    android:textSize="15dp"

                    android:layout_row="8"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnabracopen"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text=")"
                    android:textSize="15dp"

                    android:layout_row="8"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnabracclose"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text=","
                    android:textSize="15dp"

                    android:layout_row="8"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnacomma"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="R"
                    android:textSize="15dp"

                    android:layout_row="9"
                    android:layout_column="0"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnaremove"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="0dp"

                    android:text="="
                    android:textSize="15dp"

                    android:layout_row="9"
                    android:layout_column="2"
                    android:layout_columnWeight="1"

                    android:id="@+id/btnaenter"/>

            </GridLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>