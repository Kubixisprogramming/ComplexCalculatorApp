<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/dialoginputbox"
        >

        <!--visualizes input from buttons-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="30dp"

            android:id="@+id/dialoginput"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="25dp"
                android:focusable="false"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/dialoginputbox"
        android:id="@+id/dialogdeletebuttons">


        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="X"
            android:textSize="15dp"


            android:id="@+id/btndialogclose"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:layout_alignParentRight="true"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="C"
            android:textSize="15dp"


            android:id="@+id/btndialogclear"/>


    </RelativeLayout>


    <!--grid with all the buttons you can press-->


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="28dp"
        android:layout_below="@id/dialogdeletebuttons"

        android:columnCount="3"
        android:rowCount="5"
        android:padding="16dp"
        android:layout_gravity="center"

        android:id="@+id/buttongrid">


        <!--buttons for all inputs-->

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="7"
            android:textSize="15dp"

            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:id="@+id/btn7"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="8"
            android:textSize="15dp"

            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:id="@+id/btn8"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="9"
            android:textSize="15dp"

            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:id="@+id/btn9"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="4"
            android:textSize="15dp"

            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:id="@+id/btn4"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="5"
            android:textSize="15dp"

            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:id="@+id/btn5"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="6"
            android:textSize="15dp"

            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:id="@+id/btn6"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="1"
            android:textSize="15dp"

            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:id="@+id/btn1"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="2"
            android:textSize="15dp"

            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:id="@+id/btn2"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="3"
            android:textSize="15dp"

            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:id="@+id/btn3"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="0"
            android:textSize="15dp"

            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:id="@+id/btn0"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text=","
            android:textSize="15dp"

            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:id="@+id/btnkomma"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="-"
            android:textSize="15dp"

            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:id="@+id/btndialogminus"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="R"
            android:textSize="15dp"

            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:id="@+id/btndialogremove"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="0dp"

            android:text="="
            android:textSize="15dp"

            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:id="@+id/btndialogenter"/>

    </GridLayout>

</RelativeLayout>